@model Labb2_Linq_WebbapplicationsWithC_ASP.NET.Models.Teacher

@{
    ViewData["Title"] = "Edit teacher";
}

<h1>Edit teacher</h1>
<div class="row justify-content-start">
    <div class="col-md-6">
        <h4>Teacher information</h4>
        <hr />
        <h6>First name: </h6><h6 class="text-black-50">@Html.DisplayFor(model => model.TeacherFirstName)</h6>
        <h6> name: </h6><h6 class="text-black-50">@Html.DisplayFor(model => model.TeacherLastName)</h6>
        <h4 class="mt-5">Update information</h4>
        <hr />
        <form asp-action="Edit" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeacherId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeacherCourses" />

            <div class="mb-3">
                <label asp-for="TeacherFirstName" class="control-label"></label>
                <input asp-for="TeacherFirstName" class="form-control" />
                <span asp-validation-for="TeacherFirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TeacherLastName" class="control-label"></label>
                <input asp-for="TeacherLastName" class="form-control" />
                <span asp-validation-for="TeacherLastName" class="text-danger"></span>
            </div>


            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-md-5 mb-lg-5">
    <a class="text-decoration-none text-black-50" asp-action="Index">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
        </svg>
        Back
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
